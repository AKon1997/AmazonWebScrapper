{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist",
        "noEmitOnError": false,
        "strict": false,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "tmp/**/*"
    ]
}